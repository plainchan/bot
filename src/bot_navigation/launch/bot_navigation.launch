<?xml version="1.0" ?>

<launch>
    <arg name="map_file" default="$(find bot_navigation)/maps/map.yaml" />
    <arg name="use_rslidar" default="true" />

    <!-- start  Lidar scan -->
    <include if="$(arg use_rslidar)" file="$(find bot_rslidar)/launch/bot_points2laser.launch" />
    <include unless="$(arg use_rslidar)" file="$(find bot_ydlidar)/launch/ydlidar.launch" />
    
    <!-- map_server load map's data -->
    <node pkg="map_server" type="map_server" name="map_server"  args="$(arg map_file)" />

    <!-- AMCL -->
    <include file="$(find bot_navigation)/launch/bot_amcl.launch" />
    <!-- move_base -->
    <include file="$(find bot_navigation)/launch/bot_movebase.launch" />

</launch>